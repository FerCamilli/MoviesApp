<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ImagesFragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imageUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/imageUploadButton_bottom_margin"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add_photo_black"
        app:layout_constraintBottom_toTopOf="@id/imageUploadTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/imageUploadButton_content_description" />

    <TextView
        android:id="@+id/imageUploadTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/imageUploadTextView_side_margins"
        android:layout_marginEnd="@dimen/imageUploadTextView_side_margins"
        android:text="@string/imageUploadTextView_text"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout>
